<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.OtpActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/otp_background"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify your OTP"
        style="@style/TextStyle20"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/black"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS is send to +918811227733\nplease verify it."
        style="@style/TextStyle16"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:id="@+id/displayNumberWithMessage"
        />

    <TextView
        android:id="@+id/wrongNumberId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wrong number?"
        style="@style/TextStyle14"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/Blue_300"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/otp_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:backgroundTint="#000000"
        android:hint="------"
        android:inputType="number"
        android:letterSpacing="1"
        android:maxLength="6"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:shadowColor="#403B3B"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColorHighlight="#000000"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter 6 digit code"
        style="@style/TextStyle14"
        android:fontFamily="@font/roboto_black"
        android:layout_marginTop="3dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="52dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend OTP"
            android:enabled="false"
            android:textColor="@color/black"
            android:id="@+id/resend_button_id"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:backgroundTint="@color/Green_300"
            />

        <Button
            android:id="@+id/next_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="36dp"
            android:enabled="false"
            android:text="Next"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_500"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="82dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="00:59"
            android:id="@+id/timer"
            />

    </RelativeLayout>

</LinearLayout>
</layout>